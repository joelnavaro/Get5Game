<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnePlayerActivity">

    <TextView
        android:id="@+id/ttlTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="1 Player Game"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/c2p1_imgView"
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/c3p1_imgView"
        app:srcCompat="@drawable/backside" />

    <ImageView
        android:id="@+id/c3p1_imgView"
        android:layout_width="80sp"
        android:layout_height="110sp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/c4p1_imgView"
        app:srcCompat="@drawable/backside" />

    <ImageView
        android:id="@+id/c4p1_imgView"
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/c5p1_imgView"
        app:srcCompat="@drawable/backside" />

    <ImageView
        android:id="@+id/c5p1_imgView"
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/backside" />

    <Button
        android:id="@+id/backPlayerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/setTablebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="16dp"
        android:text="take new card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/c1p1_imgView"
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/c2p1_imgView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/backside" />

    <ImageView
        android:id="@+id/deckView"
        android:layout_width="154dp"
        android:layout_height="172dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.937"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ttlTextView"
        app:srcCompat="@drawable/deck" />

    <ImageView
        android:id="@+id/usedCardView"
        android:layout_width="157dp"
        android:layout_height="143dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toTopOf="@+id/c5p1_imgView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/c6p1_imgView"
        app:layout_constraintTop_toBottomOf="@+id/deckView"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/discard" />

    <ImageView
        android:id="@+id/c6p1_imgView"
        android:layout_width="163dp"
        android:layout_height="217dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toTopOf="@+id/c1p1_imgView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ttlTextView"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/question" />

    <TextView
        android:id="@+id/tv_c1_View"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="12dp"
        android:gravity="bottom"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/c1p1_imgView"
        app:layout_constraintStart_toStartOf="@+id/c1p1_imgView" />

    <TextView
        android:id="@+id/tv_c2_View"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="12dp"
        android:gravity="bottom"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/c2p1_imgView"
        app:layout_constraintStart_toStartOf="@+id/c2p1_imgView" />

    <TextView
        android:id="@+id/tv_c3_View"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="12dp"
        android:gravity="bottom"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/c3p1_imgView"
        app:layout_constraintStart_toEndOf="@+id/c2p1_imgView" />

    <TextView
        android:id="@+id/tv_c4_View"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        android:gravity="bottom"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/c4p1_imgView"
        app:layout_constraintStart_toEndOf="@+id/c3p1_imgView" />

    <TextView
        android:id="@+id/tv_c5_View"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="12dp"
        android:gravity="bottom"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/c5p1_imgView"
        app:layout_constraintStart_toEndOf="@+id/c4p1_imgView" />

    <TextView
        android:id="@+id/newCardView"
        android:layout_width="46dp"
        android:layout_height="54dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        android:gravity="bottom"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/c6p1_imgView"
        app:layout_constraintStart_toStartOf="@+id/c6p1_imgView" />

    <TextView
        android:id="@+id/ncRankView"
        android:layout_width="46dp"
        android:layout_height="54dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="12dp"
        android:gravity="right"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/c6p1_imgView"
        app:layout_constraintEnd_toEndOf="@+id/c6p1_imgView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/newCardView" />

    <TextView
        android:id="@+id/c1_rankView"
        android:layout_width="28dp"
        android:layout_height="34dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:gravity="right"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/c1p1_imgView"
        app:layout_constraintEnd_toStartOf="@+id/c2p1_imgView"
        app:layout_constraintHorizontal_bias="0.187"
        app:layout_constraintStart_toEndOf="@+id/tv_c1_View" />

    <TextView
        android:id="@+id/c2_rankView"
        android:layout_width="28dp"
        android:layout_height="34dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:gravity="right"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/c2p1_imgView"
        app:layout_constraintEnd_toEndOf="@+id/c2p1_imgView" />

    <TextView
        android:id="@+id/c3_rankView"
        android:layout_width="28dp"
        android:layout_height="34dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:gravity="right"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/c3p1_imgView"
        app:layout_constraintEnd_toEndOf="@+id/c3p1_imgView" />

    <TextView
        android:id="@+id/c4_rankView"
        android:layout_width="28dp"
        android:layout_height="34dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:gravity="right"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/c4p1_imgView"
        app:layout_constraintEnd_toEndOf="@+id/c4p1_imgView" />

    <TextView
        android:id="@+id/c5_rankView"
        android:layout_width="28dp"
        android:layout_height="34dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:gravity="right"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/c5p1_imgView"
        app:layout_constraintEnd_toEndOf="@+id/c5p1_imgView" />

</androidx.constraintlayout.widget.ConstraintLayout>